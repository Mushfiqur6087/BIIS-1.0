    <a href="./logout" class="w3-bar-item w3-button w3-hover-white">Log Out</a>

  </div>
</nav>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:340px;margin-right:40px">

  <!-- Header -->
  <div class="w3-container" style="margin-top:80px" id="showcase">
    <h1 class="w3-jumbo"><b>Welcome Admin</b></h1>
    <hr style="width:50px;border:5px solid red" class="w3-round">
  </div>
  
  <div class="table-container">
    <div class="w3-card-4 w3-white w3-padding">
      <table class="custom-table">
        <thead>
          <tr>
            <th>Department Name</th>
            <th>Total Students</th>
            <th>Total Teachers</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(person) { %>
            <tr>
              <td><%= person.DEPARTMENT_NAME %></td>
              <td><%= person.TOTAL_STUDENTS %></td>
              <td><%= person.TOTAL_TEACHERS %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>


  <div class="table-container">
    <div class="w3-card-4 w3-white w3-padding">
      <table class="custom-table" id="data-table">
        <thead>
          <tr>
            <th>Department Name</th>
            <th>Course ID</th>
            <th>Max Enrollment</th>
            <th>Current Enrollment</th>
            <th>Total Teacher </th>
          </tr>
        </thead>
        <tbody>
          <% data2.forEach(function(person) { %>
            <tr>
              <td><%= person.DEPARTMENT_NAME %></td>
              <td><%= person.COURSE_ID %></td>
              <td><%= person.MAX_ENROLLMENT %></td>
              <td><%= person.CURRENT_ENROLLMENT %></td>
              <td><%= person.TOTAL_TEACHERS %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
      <button  class="w3-button"  id="expand-button">Expand</button>
    </div>
  </div>   
</div>



<script>
  const expandButton = document.getElementById("expand-button");
  const tableRows = document.querySelectorAll("#data-table tbody tr");

  let expanded = false;

  expandButton.addEventListener("click", () => {
    expanded = !expanded;
    tableRows.forEach((row, index) => {
      if (index >= 5) {
        row.style.display = expanded ? "table-row" : "none";
      }
    });
    expandButton.innerText = expanded ? "Collapse" : "Expand";
  });
</script>
</body>
</html>

