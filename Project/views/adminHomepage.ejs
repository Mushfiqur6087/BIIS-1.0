  <script src="/SocketIO-Script.js" defer></script>





  <style>
    #data-table tbody tr:nth-child(n + 6) {
  display: none;
}
    body, h1, h2, h3, h4, h5 {
      font-family: "Poppins", sans-serif;
    }
    body {
      font-size: 16px;
      background-color: #f2f2f2;
    }
    .w3-half img {
      margin-bottom: -6px;
      margin-top: 16px;
      opacity: 0.8;
      cursor: pointer;
    }
    .w3-half img:hover {
      opacity: 1;
    }

      /* Custom styles for the table */
      .custom-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
      font-family: Arial, sans-serif;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }

    .custom-table th,
    .custom-table td {
      padding: 12px;
      text-align: left;
      border: 1px solid #573f3f;
    }

    .custom-table thead {
      background-color: #f2f2f2;
    }

    .custom-table th {
      background-color: #333;
      color: white;
      cursor: pointer;
    }

    .custom-table th:hover {
      background-color: #444;
    }

    .custom-table tbody tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .custom-table tbody tr:hover {
      background-color: #e0e0e0;
      cursor: pointer;
    }

  </style>
</head>
<body>

<!-- Sidebar/menu -->
