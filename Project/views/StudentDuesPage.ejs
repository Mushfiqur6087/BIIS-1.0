<div class="w3-main" style="margin-left:340px;margin-right:40px">
  <% if (items && Object.keys(items).length > 0) { %>
  <div class="w3-container"  style="margin-top:75px">


    <h1 class="w3-hover-white w3-xxxlarge"> You have total  <%= Object.keys(items).length %> Dues </h1>
    
    <ul class="w3-ul w3-card-4">
      <% items.forEach(function(item) { %>
        <li class="w3-bar">
          <div class="w3-bar-item">
            <span class="w3-large"><strong>Due name: <%= item.DESCRIPTION %></strong></span><br>
            <span> total amount need to be paid: <%= item.AMOUNT %></span>
          </div>
          <div class="w3-bar-item w3-right">
            <span>Time left until : <%= item.PAYMENT_DATE %> </span>
          </div>
        </li>
      <% }); %>
    </ul>



  </div>
  <% } %>

  <% if (items && Object.keys(items).length <= 0) { %>
    
    <h1 class="w3-text-red"><b>Your Currently don't have any dues </b></h1>


  <% } %>







